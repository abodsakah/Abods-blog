<%- include("../addons/head"), {title:title} %>
<%- include("../addons/navbar") %>

<div class="uk-cover-container uk-height-medium">
    <% if(postInfo.header_image !== null) {%> 
<!-- Header image -->
    <img src="<%- postInfo.header_image %> " alt="" uk-cover>
<% }else{ %>
    <img src="/images/grey.jpg" alt="" uk-cover>
<% } %> 
</div>

<br><br>
<div class="uk-container uk-container-xlarge ">
    <ul class="uk-breadcrumb">
        <li><a href="/">Home</a></li>
        <li><span><%= postInfo.title %></span></li>
    </ul>
    <article class="uk-article">

        <h1 class="uk-article-title"><a class="uk-link-reset" href=""><%= postInfo.title %></a></h1>

        <p class="uk-article-meta">Written by <a href="#"> <%= postInfo.author %>  </a> on <%= postInfo.date_created.substring(0,16) %>.

        <p class="uk-text-lead"> <%= postInfo.post_meta %>  </p>

        <p> <%- postInfo.body %>  </p>

    </article>
</div>

<%- include("../addons/footer") %>