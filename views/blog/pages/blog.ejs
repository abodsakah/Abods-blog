<%- include("../addons/head"), {title:title} %>
<%- include("../addons/navbar") %> 

<div class="container">
    <h1>All posts</h1>
    <br><br>
    <% for(var post of posts) { %>
        <% if(post.status === 1) {%>  
            <div class="artical-container" onclick="redirectToPost(<%= post.id %>)">
                <% console.log(post.header_image) %> 
                <% if(post.header_image !== "") {%> 
                    <img src="/uploads/<%= post.header_image %>" alt="">
                <% } else {%>
                    <img src="/images/placeholder image.png" alt="">
                <% } %>
                <div class="artical-info">
                    <h2><%= post.title %></h2>
                    <p><%= post.post_meta %></p>
                </div>
            </div>
    <% }} %>
</div>

<%- include("../addons/footer") %>